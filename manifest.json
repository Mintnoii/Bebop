{
    "manifest_version": 3,
    "name": "Bebop",
    "description": "Vue Vite Chrome Extension made with 'crxjs': https://github.com/crxjs/chrome-extension-tools",
    "version": "1.0.0",
    "action": {
        "default_title": "Vue Vite",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "index.html",
        "open_in_tab": true
    },
    "content_scripts": [
    {
      "all_frames": true,
      "js": ["src/content/main.ts"],
      "matches": ["*://*/*"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "public/logo.png",
    "48": "public/logo.png",
    "64": "public/logo.png",
    "128": "public/logo.png"
  }
}