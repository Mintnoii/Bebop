{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./src/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["vite.config.ts", "manifest.json", ".eslintrc.cjs"]
}
